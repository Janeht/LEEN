<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel2Activity"
    android:background="@drawable/init3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <Button
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/animabotonflecha"
            android:id="@+id/btnRegresar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prueba"
            android:text="prueba"
            android:textColor="#ffff"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="40dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:layout_marginTop="30dp">
                <ImageView
                    android:layout_width="110dp"
                    android:layout_height="100dp"
                    android:id="@+id/imgNivel2"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/btnPrimeraOP"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:id="@+id/btnSegundaOP"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"/>

                <ImageView
                    android:id="@+id/btnTerceraOP"
                    android:layout_width="70dp"
                    android:layout_height="100dp"
                    android:layout_marginLeft="30dp"/>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/silenciar"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="50dp"/>
    </LinearLayout>

</android.support.constraint.ConstraintLayout>