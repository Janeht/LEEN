<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel1Activity"
    android:background="@drawable/init3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:background="#0000"
                android:src="@drawable/animabotonflecha"
                android:id="@+id/btnRegresar"/>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="400dp"
                android:layout_marginTop="10dp"
                android:src="@drawable/animabotonayuda"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:id="@+id/btnAyuda"/>

        </LinearLayout>
        <ImageButton
            android:scaleType="fitCenter"
            android:background="@android:color/transparent"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginTop="-80dp"
            android:id="@+id/numUno"/>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/imgUno" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/animabotonnext"
            android:layout_gravity="right"
            android:layout_marginTop="-75dp"
            android:layout_marginBottom="10dp"
            android:background="#0000"
            android:id="@+id/btnSig"/>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>