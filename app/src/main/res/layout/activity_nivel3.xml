<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel3Activity"
    android:background="@drawable/init3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:orientation="horizontal">

            <Button
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:id="@+id/btnRegresar"
                android:background="@drawable/animabotonflecha" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="-70dp"
            android:layout_marginRight="30dp">

            <Button
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:id="@+id/btnReproducir"
                android:background="@drawable/silenciar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_gravity="center">

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:layout_marginTop="65dp"
                android:background="@color/colorOpciones"
                android:layout_marginRight="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:layout_marginTop="65dp"
                android:background="@color/colorOpciones"
                android:layout_marginRight="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:layout_marginTop="65dp"
                android:background="@color/colorOpciones"
                android:layout_marginRight="10dp">
            </LinearLayout>

            <LinearLayout
                android:layout_width="75dp"
                android:layout_height="5dp"
                android:layout_marginTop="65dp"
                android:background="@color/colorOpciones">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btnPrimeraOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/btnSegundaOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp" />

            <ImageView
                android:id="@+id/btnTerceraOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp" />

            <ImageView
                android:id="@+id/btnCuartaOP"
                android:layout_width="70dp"
                android:layout_height="70dp" />
        </LinearLayout>

    </LinearLayout>


</android.support.constraint.ConstraintLayout>