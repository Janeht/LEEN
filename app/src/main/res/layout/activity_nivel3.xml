<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Nivel3Activity"
    android:background="@drawable/init3">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">
            <ImageButton
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:background="#0000"
                android:src="@drawable/animabotonflecha"
                android:id="@+id/btnRegresar"
                android:layout_gravity="center"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="7dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/igvVida1"
                    android:src="@drawable/sola"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:id="@+id/igvVida2"
                    android:src="@drawable/sola"/>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:id="@+id/igvVida3"
                    android:src="@drawable/sola"/>
            </LinearLayout>
            <ImageButton
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="180dp"
                android:layout_gravity="center"
                android:src="@drawable/animabotonayuda"
                android:scaleType="fitCenter"
                android:background="@android:color/transparent"
                android:id="@+id/btnAyuda"/>
        </LinearLayout>








        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="50dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btnElegir1"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp" />

            <ImageView
                android:id="@+id/btnElegir2"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/btnElegir3"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/btnElegir4"
                android:layout_width="75dp"
                android:layout_height="75dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:layout_gravity="center">

            <ImageView
                android:id="@+id/btnPrimeraOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/btnSegundaOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/btnTerceraOP"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginRight="40dp"/>

            <ImageView
                android:id="@+id/btnCuartaOP"
                android:layout_width="70dp"
                android:layout_height="70dp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>